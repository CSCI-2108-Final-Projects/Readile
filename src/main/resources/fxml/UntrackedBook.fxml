<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.readile.readile.controllers.UntrackedBookController">
   <children>
      <AnchorPane prefHeight="706.0" prefWidth="1024.0">
         <stylesheets>
            <URL value="@../styles/global.css" />
            <URL value="@../styles/untracked-book.css" />
         </stylesheets>
         <BorderPane layoutY="25.0" prefHeight="680.0" prefWidth="1024.0">
            <center>
               <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                  <Pane id="book-img" fx:id="bookCover" layoutX="47.0" layoutY="35.0" prefHeight="390.0" prefWidth="300.0" />
                  <Label id="status" fx:id="status" alignment="CENTER" contentDisplay="CENTER" layoutX="95.0" layoutY="443.0" prefHeight="30.0" prefWidth="160.0" text="To Read" />
                  <Label id="book-name" fx:id="bookName" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="416.0" layoutY="35.0" prefHeight="96.0" prefWidth="536.0" text="Book Name" wrapText="true" />
                  <JFXButton id="delete" layoutX="264.0" layoutY="437.0" onAction="#deleteBook" prefHeight="40.0" prefWidth="40.0" ripplerFill="WHITE" text=" ">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></JFXButton>
                  <Label id="meta" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="415.0" layoutY="130.0" prefHeight="20.0" prefWidth="47.0" text="by:" wrapText="true" />
                  <Label id="authors" fx:id="authors" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="448.0" layoutY="130.0" prefHeight="96.0" prefWidth="481.0" text="list of authors" wrapText="true" />
                  <Label id="meta-bold" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="415.0" layoutY="226.0" prefHeight="23.0" prefWidth="76.0" text="Pages:" wrapText="true" />
                  <Label id="pages" fx:id="pages" alignment="TOP_LEFT" contentDisplay="CENTER" layoutX="479.0" layoutY="226.0" prefHeight="23.0" prefWidth="76.0" text="0" wrapText="true" />
                  <JFXButton id="button" layoutX="574.0" layoutY="311.0" onAction="#startTracking" prefHeight="45.0" prefWidth="220.0" text="Start Tracking">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </JFXButton>
                  <JFXButton layoutX="17.0" layoutY="15.0" onAction="#back" ripplerFill="WHITE" text=" ">
                     <font>
                        <Font size="1.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                           <image>
                              <Image url="@../icons/back.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </Pane>
            </center>
            <top>
               <Pane id="navbar" prefHeight="100.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
                  <ImageView fitHeight="73.0" fitWidth="73.0" layoutX="43.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@../images/white-logo.png" />
                  </ImageView>
                  <Label id="title" layoutX="46.0" layoutY="21.0" prefHeight="60.0" prefWidth="317.0" text="My Book" />
                  <Pane id="avatar" fx:id="avatar" layoutX="899.0" layoutY="14.0" onMouseClicked="#showPopupMenu" prefHeight="70.0" prefWidth="70.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Pane>
               </Pane>
            </top>
         </BorderPane>
         <HBox id="tool-bar" fx:id="toolBar" alignment="CENTER_RIGHT" onMouseEntered="#move" prefHeight="26.0" prefWidth="1024.0">
            <children>
               <JFXButton id="min" onAction="#minimize" ripplerFill="WHITE" text=" ">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </JFXButton>
               <JFXButton id="close" onAction="#close" ripplerFill="WHITE" text=" ">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </JFXButton>
            </children>
         </HBox>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@../styles/home.css" />
      <URL value="@../styles/global.css" />
   </stylesheets>
</StackPane>
