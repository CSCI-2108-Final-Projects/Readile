<AnchorPane prefHeight="680.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.readile.readile.controllers.ForgotPasswordScreenController">
    <stylesheets>
        <URL value="@../styles/global.css" />
        <URL value="@../styles/forgot-password.css" />
    </stylesheets>
    <BorderPane prefHeight="680.0" prefWidth="1024.0">
        <left>
            <Pane id="aside" prefHeight="680.0" prefWidth="380.0" BorderPane.alignment="CENTER">
                <VBox layoutX="81.0" layoutY="88.0" prefHeight="260.0" prefWidth="218.0">
                    <ImageView fitHeight="218.0" fitWidth="218.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@../images/white-logo.png" />
                    </ImageView>
                    <Label id="title" prefHeight="63.0" prefWidth="218.0" text="Readile" />
                </VBox>
                <Label id="subtitle" layoutY="603.0" prefHeight="21.0" prefWidth="380.0" text="The Way to Track Your Readings" />
            </Pane>
        </left>
        <center>
            <Pane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <VBox id="main" layoutX="97.0" layoutY="42.0" prefHeight="457.0" prefWidth="450.0">
                    <VBox id="forgot-password-container" prefHeight="110.0" prefWidth="450.0">
                  <JFXButton alignment="CENTER" onAction="#back" prefHeight="18.0" prefWidth="26.0" ripplerFill="WHITE" text=" " textAlignment="CENTER">
                     <graphic>
                              <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                                  <Image url="@../icons/back.png" />
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                              </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <font>
                        <Font size="1.0" />
                     </font>
                  </JFXButton>
                        <Label id="forgot-password-lbl" prefHeight="66.0" prefWidth="450.0" text="Forgot Password" />
                    </VBox>
                    <JFXTextField id="email-field" fx:id="email" promptText="Email" />
                    <JFXButton id="reset-password-btn" onAction="#resetPassword" prefHeight="55.0" prefWidth="358.0" text="Reset Password">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></JFXButton>
               <Label id="msg" fx:id="message" prefHeight="41.0" prefWidth="412.0" text="If the email entered matches your account, you will receive an email with a link to reset your password" textAlignment="CENTER" wrapText="true" />
                </VBox>
            </Pane>
        </center>
    </BorderPane>
